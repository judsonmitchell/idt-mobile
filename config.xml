<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "org.jaclouisiana.lea"
        versionCode = "7"
        version     = "1.1.3">

    <!-- versionCode is optional and Android only -->

    <name>Clean Jacket</name>

    <description>Clean Jacket - Helps you quickly determine if your are eligible for a criminal record expungment in Louisiana and refers you to attorneys who can help.</description>

    <author href="http://jaclouisiana.org" email="info@JACLouisiana.org">
        Justice and Accountability Center of Louisiana
    </author>

    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    <gap:plugin name="org.apache.cordova.geolocation"/>
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />    

    <preference name="permissions" value="none" />
    <preference name="phonegap-version" value="3.5.0" />         
    <preference name="android-targetSdkVersion" value="14" />

    <preference name="fullscreen" value="true" />           <!-- all: hides the status bar at the top of the screen -->

    <access origin="*"/>
    <icon src="icon.png" />
    <icon src="res/icon/icon.png" />
    <icon src="res/icon/android/icon-36-ldpi.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="res/icon/android/icon-48-mdpi.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="res/icon/android/icon-72-hdpi.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="res/icon/android/icon-96-xhdpi.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="res/icon/blackberry/icon-80.png"     gap:platform="blackberry" />
    <icon src="res/icon/blackberry/icon-80.png"     gap:platform="blackberry" gap:state="hover"/>

    <icon src="res/icon/ios/icon-29.png"   gap:platform="ios"   width="29" height="29" />
